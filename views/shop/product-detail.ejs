<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
    <style>
        * {
            box-sizing: border-box;
            }

            body {
            margin: 0;
            font-family: Arial;
            }
        .main-content{
            position: relative;
        }
        .single-image-view{
            position: relative;
            margin: 0;
            width:512px;
            height: 300px;
        }
        .single-image-view img{
            margin: 0;
            width: 100%;
        }
        .horizontal_images {
            border: solid 1px #a394af;
            border-radius: 10px;
            position: absolute;
            bottom: -60%;
            text-align: center;
            height: 150px;
            width: 50%;
        }
        .horizontal_images img {
            width: 128px;
            height: auto;
            padding: 10px;
        }

        .other-content{
            position: absolute;
            right: 0;
            top: 60px;
            margin: 5% 20% 0% 0%;
        }
        .image {
            float: left;
            padding: 10px;
            }

        /* Style the images inside the grid */
        .image img {
        opacity: 0.8; 
        cursor: pointer; 
        }

        .image img:hover {
        opacity: 1;
        }

        /* Clear floats after the columns */
        .row:after {
        content: "";
        display: table;
        clear: both;
        }

    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="main-content">
            <div class="single-image-view" style = "">
                <img src="/<%= images[0].imageUrl%>" alt="" >
            </div>
            <div class="horizontal_images">
                <% for (let image of images) { %>
                        <img src="/<%= image.imageUrl %>" alt="<%= product.title %>">
                <% } %>
            </div>   
            <div class="other-content">
                <h3><%= product.title %></h3>
                    <% if ( product.currency === "1") { %>
                        <span class="product__price">USD:</span>    
                    <% } %>
                    <% if( product.currency === "2"){%>
                        <span class="product__price">BDT:</span>
                    <% } %>
                    <% if( product.currency === "3"){%>
                        <span class="product__price">AED:</span>
                    <% } %>
                    <span class="product__price"><%= product.price %></span>
                    <p class="product__description">
                        <%= product.description %>
                    </p>
                <% if (isAuthenticated) { %>
                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                <% } %>
            </div>
        </main>
        <script>

        </script>
        <%- include('../includes/end.ejs') %>
